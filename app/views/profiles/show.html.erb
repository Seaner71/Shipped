<% if @user == current_user %>
  <%= link_to 'Edit Profile', edit_profile_path(@user.user_name) %>
  <% end %>
  <h2><%= @user.user_name %>'s Boats</h2>
<% @boats.each do |boat| %>
  <%= render 'boats/boat', boat: boat %>
<% end %>
<h2><%= @user.user_name %>'s Jobs</h2>
<% @jobs.each do |job| %>
  <%= render 'jobs/job', job: job %>
<% end %>
