<% if @user == current_user %>
  <%= link_to 'Edit Profile', edit_profile_path(@user.user_name) %>
  <% end %>
<br>
<br>
<h1><%= @user.user_name %></h1>
  <div class="avatar">
    <%= image_tag(@user.avatar.url) %></div>
<br>
<div class="user-bio"><h2>About <%=@user.user_name%></h2>
   <br>
  <%= @user.bio %>
</div>
<br>
  <h2><%= @user.user_name %>'s Boats</h2>
<% @boats.each do |boat| %>
  <%= render 'boats/boat', boat: boat %>
<% end %>
<br>
<h2><%= @user.user_name %>'s Jobs</h2>
<% @jobs.each do |job| %>
  <%= render 'jobs/job', job: job %>
<% end %>
